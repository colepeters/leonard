{{!< default}}
{{> header}}

<main class='mw7-ns lh-copy'>
  {{#post}}
    <article class='dark-gray' role='article' itemscope itemtype='http://schema.org/Article'>
      
      <header>
        <time datetime='{{date format='YYYY-MM-DD'}}' itemprop='datePublished' class='mb0 ttu tracked f6 black-50 sans-serif'>{{date format='DD MMMM, YYYY'}}</time>
        <h1 class='mt2 mb6 f1 fw4 sans-serif lh-title' itemprop='headline'>{{title}}</h1>
        <div class='c-post-image'>
          <img src='{{image}}'>
        </div>
      </header>
      
      {{content}}
    </article>
  {{/post}}
  {{#if pagination}}{{{pagination}}}{{/if}}
</main>

{{> footer}}
